
@{
    ViewBag.Title = "UrunEkle";
}

<br /><br /><br />
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h3>Urun Ekle</h3>
            </header>
            <div class="panel-body">
                <form role="form" class="form-horizontal tasi-form" action="/Admin/UrunEkle" method="post" enctype="multipart/form-data">
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">Adı</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="f-name" class="form-control" name="Adi">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <div class="col-lg-10">
                            <label class="col-lg-4">Marka</label>
                            <select class="form-control m-bot15" name="Markaid">
                                @foreach (Table_Marka item in ViewBag.Marka)
                                {
                                    <option value="@item.Markaid">@item.Adi</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">Fiyat</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="f-name" class="form-control" name="Fiyat">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">Resim</label>
                        <div class="col-lg-10">
                            <div class="fileupload fileupload-new" data-provides="fileupload">
                                <span class="btn btn-white btn-file">
                                    <span class="fileupload-new"><i class="icon-paper-clip"></i> Resim Seç</span>
                                    <input type="file" class="default" name="fileUpload" />
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>

