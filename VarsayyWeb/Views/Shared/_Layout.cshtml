<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Ersag @ViewBag.Title</title>
    <meta name="description" content="Here goes description" />
    <meta name="author" content="author name" />
    <link rel="shortcut icon" href="/Content/images/favicon.ico" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400italic,700italic,400,600,700,800" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="/Content/css/bootstrap.css" />
    <link rel="stylesheet" href="/Content/css/style.css" />
    <meta name="google-site-verification" content="k9C5GnRX_oe84ps7C7B01gpUi4u3gIAqivHoQ4at6LM" />
    @RenderSection("head", false)
    <script src="~/Content/js/jquery-1.10.0.min.js"></script>
</head>
<body class="home-blog-show">
    <div class="header">
        <div class="container">
            <div class="header-middle-info">
                <div class="col-md-4">
                    <div class="logo">
                    </div>
                </div>
                <div class="col-md-8">
                    <ul class="header-middle-account">
                        @{
                            if (AktifKullanici.kullanici != null)
                            {
                                <li><a href="/Kullanici/CikisYap">Çıkış Yap</a></li>
                                <li><a href="#"><i class="icon-259" title="Checkout"></i> Alışverişe Başla</a></li>
                                <li><a href="/Sepet/Index">Sepetim</a></li>
                            }
                            else
                            {
                                <li><a href="/Kullanici/GirisYap"><i class="icon-351" id="girisyap" title="Login"></i>Giriş Yap </a></li>
                                <li><a href="/Kullanici/KayitOl">Kayıt Ol</a></li>
                            }
                        }
                    </ul>
                </div>
                <div class="clear"></div>
            </div>
            <div class="menu">
                <div class="repsonsive-menu"><i class="icon-406" title="406"></i> Menu</div>
                <ul>
                    <li><a href="/Home/Index">Ana Sayfa</a></li>
                    @{
                        if (AktifKullanici.kullanici != null)
                        {
                            if (AktifKullanici.kullanici.Table_Kullanici_Rol.FirstOrDefault(x => x.Kullanciid == AktifKullanici.kullanici.Kullanicid).Table_Rol.Adi == "Admin")
                            {
                                <li class="menu-item-has-children">
                                    <a href="#">Yönetici Paneli</a>
                                    <ul>
                                        <li><a href="/Siparisler/Index">Siparisler</a></li>
                                        <li><a href="/Admin/UrunEkle">Urun Ekle</a></li>
                                    </ul>
                                </li>
                            }
                        }
                    }
                </ul>
                <div class="clear"></div>
            </div>
        </div>
    </div>
    @RenderBody()
    <div class="modal fade" id="GirisYap" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-review">
            <div class="modal-content">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3>Giriş yap</h3>
                <form>
                    <p>İsim</p>
                    <input class="input-line" name="Adi" type="text">
                    <p>Düşüncen ?</p>
                    <textarea class="text-area" name="comment"></textarea>
                    <a href="#" class="button-6">Yorumu Paylaş</a>
                </form>
            </div>
        </div>
    </div>
    <div class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-2 col-xs-6">
                </div>
                <div class="col-md-2 col-xs-6">
                </div>
                <div class="col-md-2 col-xs-6">
                </div>
                <div class="col-md-2 col-xs-6">
                </div>
                <div class="col-md-4">
                    <div class="subscription">
                        <div class="subscription-title">Bize Mesaj Gönderin</div>
                        <form class="subscription" role="form" action="/Home/Mesajlar" method="post">
                            <input type="text" name="KullaniciAdi" placeholder="İsim" class="subscription-line">
                            <input type="text" name="Mesaj" placeholder="Mesaj" class="subscription-line">
                            <input type="submit" value="Gönder" class="button-5">
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="mini-footer">
                <div class="row">
                    <div class="col-md-6">
                        Powered by STK
                    </div>
                    <div class="col-md-6">
                        <div class="text-right">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/Content/js/modernizr.custom.63321.js" type="text/javascript"></script>
    <script src="/Content/js/jquery-1.10.0.min.js" type="text/javascript"></script>
    <script src="/Content/js/jquery-ui.min.js" type="text/javascript"></script>
    <script src="/Content/js/bootstrap.js" type="text/javascript"></script>
    <script src="/Content/js/placeholder.js" type="text/javascript"></script>
    <script src="/Content/js/imagesloaded.pkgd.min.js" type="text/javascript"></script>
    <script src="/Content/js/masonry.pkgd.min.js" type="text/javascript"></script>
    <script src="/Content/js/jquery.swipebox.min.js" type="text/javascript"></script>
    <script src="/Content/js/farbtastic/farbtastic.js" type="text/javascript"></script>
    <script src="/Content/js/options.js" type="text/javascript"></script>
    <script src="/Content/js/plugins.js" type="text/javascript"></script>
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->

</body>

</html>
