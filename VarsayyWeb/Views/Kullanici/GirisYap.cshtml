<body class="login-body">
    <div class="container">
        <form class="form-signin" action="/Kullanici/GirisYap" method="post">
            <h2 class="form-signin-heading">Şimdi Giriş Yap</h2>
            <div class="login-wrap">
                <input type="text" class="form-control" name="Adi" placeholder="İsim" autofocus>
                <input type="password" class="form-control" name="Parola" placeholder="Parola">
                <label class="checkbox">
                    <input type="checkbox" value="remember-me"> Beni Hatırla
                    <span class="pull-right">
                        <a data-toggle="modal" href="#myModal"> Parolamı unuttum?</a>
                    </span>
                </label>
                <button class="btn btn-lg btn-login btn-block" type="submit">Giriş Yap</button>
                <div class="registration">
                    Daha üye olmadın mı?
                    <a class="" href="#">
                        Üye ol
                    </a>
                </div>
            </div>
        </form>
    </div>
    <script src="/Content/Admin/js/jquery.js"></script>
    <script src="/Content/Admin/js/bootstrap.min.js"></script>

</body>
